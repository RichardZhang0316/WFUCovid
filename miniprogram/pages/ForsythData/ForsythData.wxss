page{
  height: 100%;
  background: linear-gradient(to bottom, #9E7E38 0%,#9E7E38 20%, #ececec 20%,#ececec 100%); 
  background-color:  #ececec ;
  background-repeat: no-repeat;
} 
.BIGcard{
    /*卡片的宽度*/  
    width: 90%;
    /*左外边距，这里代表距离最左边的距离*/
    margin-left: 5%;
    /*卡片的高度。*/
    height: 270rpx;
    /*背景色，可以自己更换*/
    background: rgb(255, 255, 255);
    border-radius:10px;
    /* radius是卡片的边框的圆润c程度*/
    margin-top: 30px;
    box-shadow: 0px 5px 5px #cdcfcf;
    border-style:solid;
    border-color: rgb(0, 0, 0);
}
.mapCard{
  width: 90%;
  /*左外边距，这里代表距离最左边的距离*/
  margin-left: 5%;
  /*卡片的高度。*/
  height: 400rpx;
  /*背景色，可以自己更换*/
  /* background: rgb(255, 255, 255); */
  border-radius:10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  /* radius是卡片的边框的圆润c程度*/
  box-shadow: 5px 5px 5px #cdcfcf;
}
.dataCard{
    /*卡片的宽度*/  
    width: 42.5%;
    /*左外边距，这里代表距离最左边的距离*/
    margin-left: 5%;
    /*卡片的高度。*/
    height: 100%;
    /*背景色，可以自己更换*/
    background: rgb(255, 255, 255);
    /* radius是卡片的边框的圆润c程度
    shadow是阴影效果，四个值分别为水平阴影，垂直阴影，模糊距离，阴影的颜色。
    */
    border-radius: 25px;
    box-shadow: 5px 5px 5px #cdcfcf;
}
